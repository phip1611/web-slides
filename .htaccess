AddDefaultCharset utf-8

### FORCE SSL ###
RewriteEngine On
RewriteCond %{SERVER_PORT} 80
# aus http://dev.phip1611.de/web-slides/
# wird https://dev.phip1611.de/web-slides/
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R,L]



Options -Indexes

# Protect the htaccess file
<Files .htaccess>
    Order Allow,Deny
    Deny from all
